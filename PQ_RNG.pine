//Detect and highlight ranges [OPTIMIZED - DONCHIAN LOGIC]
//-----------------------------------------------------------------------------{
//Ranges drawings
var box bx = na
var line lvl = na

//Range State
var bool is_ranging = false

//Inputs for sensitivity
range_max_height = ta.atr(INPUT_ATR_LENGTH) * INPUT_RANGE_WIDTH // Maximum allowed height of the box

//Donchian Channel Logic (Smart Box Detection)
highest_high = ta.highest(high, INPUT_RANGE_LENGTH)
lowest_low   = ta.lowest(low, INPUT_RANGE_LENGTH)
box_height   = highest_high - lowest_low

//Check if the height of the last 'length' bars is tight enough to be a range
is_tight = box_height < range_max_height

if is_tight
    //If we are already in a range, just extend it
    if is_ranging
        //Update the right side of the box to current bar
        bx.set_right(bar_index)
        lvl.set_x2(bar_index)
        
        //Optional: Slightly expand vertical limits if price pushes edge but stays tight
        current_top = bx.get_top()
        current_bot = bx.get_bottom()
        if high > current_top and (high - current_bot) < range_max_height
            bx.set_top(high)
        if low < current_bot and (current_top - low) < range_max_height
            bx.set_bottom(low)
            
    else
        //NEW RANGE DETECTED: Draw the box
        is_ranging := true
        
        //Determine color based on where we entered (optional logic, defaults to gray until breakout)
        box_color = color.new(INPUT_UNBROKEN_CSS, 80)
        
        bx := box.new(bar_index[INPUT_RANGE_LENGTH], highest_high, bar_index, lowest_low, na, bgcolor = box_color)
        lvl := line.new(bar_index[INPUT_RANGE_LENGTH], math.avg(highest_high, lowest_low), bar_index, math.avg(highest_high, lowest_low), color = INPUT_UNBROKEN_CSS, style = line.style_dotted)

else
    //Range Broken - Stop updating
    if is_ranging
        //Check Breakout Direction for final color
        if close > bx.get_top()
            bx.set_bgcolor(color.new(INPUT_UP_CSS, 75))
            lvl.set_color(INPUT_UP_CSS)
        else if close < bx.get_bottom()
            bx.set_bgcolor(color.new(INPUT_DN_CSS, 75))
            lvl.set_color(INPUT_DN_CSS)
        
        is_ranging := false




//Function
//-----------------------------------------------------------------------------{
pred_ranges(length_pred, mult_pred)=>
    var avg = INPUT_SOURCE
    var hold_atr = 0.

    atr = nz(ta.atr(length_pred)) * mult_pred
        
    avg := INPUT_SOURCE - avg > atr ? avg + atr : 
      avg - INPUT_SOURCE > atr ? avg - atr : 
      avg
        
    hold_atr := avg != avg[1] ? atr / 2 : hold_atr
        
    [avg + hold_atr * 2, avg + hold_atr, avg, avg - hold_atr, avg - hold_atr * 2]

